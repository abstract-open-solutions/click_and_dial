<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_company_form_click_and_dial">
            <field name="name">res.company.form.click_and_dial</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="model">res.company</field>
            <field name="arch" type="xml">
                <field name="website" position="after">
                    <group colspan="2">
                        <field name="voip_url"
                               help='Set the voip url base link to connect to SIP provider'
                            />
                        <field name="voip_debug"
                               help='check this option to debug click and dial functionality'
                            />
                    </group>
                </field>
            </field>
        </record>
    </data>
</openerp>
